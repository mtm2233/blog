.archiv .archiv_header .arh_addTime {
  font-size: 40rpx;
  text-align: center;
  font-weight: bold;
  margin: 25rpx 0;
}
.archiv .archiv_header .total {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-justify-content: space-around;
          justify-content: space-around;
  color: #999999;
}
.archiv .archiv_body ._li:hover ._ul {
  display: black;
}
.archiv .archiv_body ._h2 {
  font-weight: bold;
}
.archiv .archiv_body .archivul {
  margin: 0;
  padding: 0;
}
.archiv .archiv_body ._li {
  /* 不换行 */
  list-style: none;
  white-space: nowrap;
  /* 内容超出宽度时隐藏超出部分的内容 */
  overflow: hidden;
  text-overflow: ellipsis;
  margin: 15rpx;
}
.archiv .archiv_body ._li.day:hover {
  background-color: #ecf5ff;
}
.archiv .archiv_body ._li.day navigator {
  display: inline-block;
}
.archiv .archiv_body ._li.day ._span {
  color: #999999;
}

